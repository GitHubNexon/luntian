# Use Node.js image
FROM node:20

WORKDIR /app

# Copy package files and install dependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy the rest of the app
COPY . .

# Build the app (optional if needed)
RUN npm run build

# Expose the port and start the dev server
EXPOSE 5173
CMD ["npm", "run", "dev"]
